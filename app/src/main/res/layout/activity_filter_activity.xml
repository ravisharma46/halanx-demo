<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filter_activity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/linear_1"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:text="Monthly Rent"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Min:"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/min"
                    android:inputType="numberSigned"
                    android:text="50000"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="-46dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Max:"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/max"
                    android:inputType="numberSigned"
                    android:text="500000"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:text="Move-In By"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/date_pick"
                android:clickable="true"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
               android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/date_set"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Tenant Type"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Boy"
                    android:id="@+id/boy"
                    android:layout_marginLeft="40dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Girl"
                    android:id="@+id/girl"
                    android:textSize="18sp"
                    android:layout_marginLeft="90dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/family"
                    android:text="Family"
                    android:layout_marginLeft="100dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:text="Accomodation Type"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="shared Room"
                    android:id="@+id/shrd_room"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Private Room"
                    android:id="@+id/pvt_room"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/entire_room"
                    android:text="Entire Room"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>






            <TextView
                android:layout_width="wrap_content"
                android:text="Furnishing Type"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="fully furnished"
                    android:id="@+id/fully_furnsh"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Semi-furnished"
                    android:textSize="18sp"
                    android:id="@+id/semi_furnsh"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="17sp"
                    android:id="@+id/un_furnsh"
                    android:text="unfurnished"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:text="House Type"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Apartment"
                    android:id="@+id/aprt"
                    android:layout_marginLeft="30dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Independent"
                    android:id="@+id/indep"
                    android:textSize="18sp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/villa"
                    android:text="Villa"
                    android:layout_marginLeft="70dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="Show Houses Within"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <SeekBar
                android:layout_width="match_parent"
                android:id="@+id/seek_bar"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:max="9"
                android:progress="10"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/seek_res"
                android:text="10KM"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />






        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="185dp"
            android:id="@+id/reset_bt"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="left"
            android:background="@drawable/button_shape"
            android:layout_alignParentBottom="true"
            android:text="RESET"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="185dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:text="Apply"
            android:gravity="center"
            android:layout_gravity="right"
            android:id="@+id/apply_bt"
           android:layout_marginLeft="10dp"
            android:background="@drawable/button_shape"
            android:layout_height="wrap_content" />

    </LinearLayout>







</RelativeLayout>